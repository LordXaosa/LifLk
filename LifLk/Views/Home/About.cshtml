@using System.Runtime.InteropServices
@using LifLk.Models
@using Microsoft.AspNet.Identity
@model LifLk.Models.account
@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>
@if (User.Identity.IsAuthenticated)
{
    <text>Добро пожаловать, @User.Identity.GetUserName()</text>

    <text>SteamId: @Model.SteamID</text>
    <text>Ваши персонажи:</text>
    foreach(character ch in Model.character)
    {
        <!--<a href=""> Имя: @ch.Name @ch.LastName</a>-->
    @Html.ActionLink(string.Format("Имя: {0} {1}", ch.Name, ch.LastName), "Index", "Character",new { id = ch.ID}, null)
    }
}
